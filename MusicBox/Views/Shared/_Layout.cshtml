<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MusicBox</title>
    @Styles.Render("~/Media/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jplayer")
    @Styles.Render("~/Media/jplayer")
    @Scripts.Render("~/bundles/musicbox")
    @RenderSection("scripts", required: false)
    @RenderSection("styles", required: false)
    <style type="text/css">
        .menu-playlist {
            background: url('@Url.Content("~/Content/playlist.png")') no-repeat center;
            display: block;
            width: 64px;
            height: 64px;
            text-indent: -9999px;
            margin: auto;
            outline: none !important;
        }

        .menu-upload {
            background: url('@Url.Content("~/Content/upload.png")') no-repeat center;
            display: block;
            width: 64px;
            height: 64px;
            text-indent: -9999px;
            margin: auto;
            outline: none !important;
        }
    </style>
</head>
<body style="margin:0">
    <div class="content">
        <div class="content-inside">
            <div id="body"></div>
            @RenderBody()
        </div>
    </div>
    <div class="menu">
        <div>
            <br />

            <img width="90" src='@Url.Content("~/Content/logo.png")' />
            <br />
            <br />
            <br />
            @Ajax.ActionLink("playlist", "PlayList", "Player", null, new AjaxOptions { HttpMethod = "get", UpdateTargetId = "body" }, new { @class = "menu-playlist", id="playlistlink" })
            <span class="menu-text">Search</span>
            <br />
            <br />
            <br />
            @Ajax.ActionLink("upload", "Upload", "Player", null, new AjaxOptions { HttpMethod = "get", UpdateTargetId = "body" }, new { @class = "menu-upload" })
            <span class="menu-text">Upload</span>
        </div>


    </div>
    <div class="footer">

        <div id="jquery_jplayer_1" class="jp-jplayer"></div>
        <div id="jp_container_1" class="jp-audio" role="application" aria-label="media player">
            <div class="jp-type-single">
                <div class="jp-gui jp-interface">
                    <div class="jp-controls">
                        <button class="jp-play" role="button" tabindex="0">play</button>
                        <button class="jp-stop" role="button" tabindex="0">stop</button>
                    </div>
                    <div class="jp-progress">
                        <div class="jp-seek-bar">
                            <div class="jp-play-bar"></div>
                        </div>
                    </div>
                    <div class="jp-volume-controls">
                        <button class="jp-mute" role="button" tabindex="0">mute</button>
                        <button class="jp-volume-max" role="button" tabindex="0">max volume</button>
                        <div class="jp-volume-bar">
                            <div class="jp-volume-bar-value"></div>
                        </div>
                    </div>
                    <div class="jp-time-holder">
                        <div class="jp-current-time" role="timer" aria-label="time">&nbsp;</div>
                        <div class="jp-duration" role="timer" aria-label="duration">&nbsp;</div>
                        <div class="jp-toggles">
                            <button class="jp-repeat" role="button" tabindex="0">repeat</button>
                        </div>
                    </div>
                </div>
                <div class="jp-details">
                    <div class="jp-title" aria-label="title">&nbsp;</div>
                </div>
                <div class="jp-no-solution">
                    <span>Update Required</span>
                    To play the media you will need to either update your browser to a recent version or update your <a href="http://get.adobe.com/flashplayer/" target="_blank">Flash plugin</a>.
                </div>
            </div>
        </div>
    </div>

</body>
</html>
